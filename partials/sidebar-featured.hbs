<aside id="featured" class="featured hide-on-mobile grid-25 tablet-grid-50">

	{{#is "author"}}
		{{#author}}
			<div class="author-info item">
				<h2 class="title">{{name}}</h2>
				<p>{{bio}}</p>
				<div class="social">
							
					{{#if location}}
						<a href="javascript:void(0)" class="button location tooltip" title="Location: {{location}}"><i class="fa fa-map-marker"></i> Location</a>
					{{/if}}
					
					{{#if website}}
						<a href="{{website}}" class="button website tooltip" target="_blank" title="Website: {{website}}"><i class="fa fa-external-link"></i> Website</a>
					{{/if}}
					
				</div>
			</div>
		{{/author}}
	{{/is}}	

	<!-- start: .item -->
	<div class="item featured-top">
		<h3 class="title bordered">TECHNOLOGY</h3>
		<div class="box">
			{{#get "posts" limit="7" filter="tags:featured-top" as |featured-top|}}
				{{#foreach featured-top}}
					<article class="{{post_class}}">
						<time class="uppercase" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-clock-o"></i> {{date}}</time>
						<h4 class="title"><a href="{{url}}">{{title}}</a></h4>
					</article>	
				{{/foreach}}
			{{/get}}
		</div>
	</div>
	<!-- end: .item -->
	
	<!-- start: .item -->
	<div class="item featured-bottom">
		<h3 class="title bordered">VISUALTHINKING</h3>
		<div class="box">
			{{#get "posts" limit="7" filter="tags:featured-bottom" as |featured-bottom|}}
				{{#foreach featured-bottom}}
					<article class="{{post_class}}">
						<time class="uppercase" datetime="{{date format='YYYY-MM-DD'}}"><i class="fa fa-clock-o"></i> {{date}}</time>
						<h4 class="title"><a href="{{url}}">{{title}}</a></h4>
					</article>	
				{{/foreach}}
			{{/get}}
		</div>
	</div>
	<!-- end: .item -->
	
